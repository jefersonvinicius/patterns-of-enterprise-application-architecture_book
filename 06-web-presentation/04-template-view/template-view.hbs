<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Jogo</title>
    <style type='text/css'>
      * { margin: 0; padding: 0; } body { display: flex; flex-direction: column; align-items: center; } .container {
      height: 100%; max-width: 960px; display: flex; flex-direction: column; align-items: center; } .score-box {
      display: flex; width: 100%; justify-content: space-between; } .score-label { display: flex; flex-direction:
      column; align-items: center; } .score-text { font-size: 2rem; } .players-box {display: flex; flex-direction: row;}
    </style>
  </head>
  <body>
    <div class='container'>

      <div class='score-box'>
        <div class='team-box'>
          <div class='score-label'>
            <span class='score-text'>{{match.teamA.score}}</span>
            <span>{{match.teamA.name}}</span>
          </div>
          <table border='1' style='margin-right: 1rem;'>
            <thead>
              <tr>
                <th>Nº</th>
                <th>Nome</th>
              </tr>
            </thead>
            <tbody>
              {{#each playersA}}
                <tr>
                  <td>{{this.shirtNumber}}</td>
                  <td>{{this.name}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>

        <div class='team-box'>

          <div class='score-label'>
            <span class='score-text'>{{match.teamB.score}}</span>
            <span>{{match.teamB.name}}</span>

            <table border='1'>
              <thead>
                <tr>
                  <th>Nº</th>
                  <th>Nome</th>
                </tr>
              </thead>
              <tbody>
                {{#each playersB}}
                  <tr>
                    <td>{{this.shirtNumber}}</td>
                    <td>{{this.name}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>